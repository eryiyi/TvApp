<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/mm_main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView android:layout_width="100dp"
               android:id="@+id/head"
               android:layout_marginTop="25dp"
               android:layout_centerHorizontal="true"
               android:src="@drawable/ic_launcher"
               android:layout_height="100dp"/>

    <EditText android:layout_width="match_parent"
              android:textColor="@color/text_color"
              android:textColorHint="@color/textColortwo"
              android:hint="请输入手机号"
              android:layout_marginTop="25dp"
              android:layout_below="@+id/head"
              android:layout_marginLeft="25dp"
              android:layout_marginRight="25dp"
              android:padding="10dp"
              android:numeric="integer"
              android:drawablePadding="15dp"
              android:background="@color/white"
              android:drawableLeft="@drawable/md_user"
              android:id="@+id/mobile"
              android:layout_height="wrap_content"/>
    <EditText android:layout_width="match_parent"
              android:textColor="@color/text_color"
              android:textColorHint="@color/textColortwo"
              android:hint="请输入密码"
              android:layout_marginTop="15dp"
              android:layout_below="@+id/mobile"
              android:layout_marginLeft="25dp"
              android:layout_marginRight="25dp"
              android:padding="10dp"
              android:password="true"
              android:drawablePadding="15dp"
              android:background="@color/white"
              android:drawableLeft="@drawable/md_passwd"
              android:id="@+id/pwr"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_below="@+id/pwr"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="登 录"
            android:id="@+id/btn_login"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_green_shape"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:text="注册"
              android:textColor="@color/text_color"
              android:textSize="16sp"
              android:padding="15dp"
              android:id="@+id/btn_reg"
              android:layout_alignParentBottom="true"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="找回密码"
              android:textColor="@color/text_color"
              android:textSize="16sp"
              android:id="@+id/btn_find"
              android:padding="15dp"
              android:layout_alignParentRight="true"
              android:layout_alignParentBottom="true"
              android:layout_height="wrap_content"/>
</RelativeLayout>