<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="65dp">
    <RelativeLayout android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:id="@+id/foot_liner_one"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                   android:id="@+id/foot_one"
                   android:textSize="18sp"
                   android:layout_centerHorizontal="true"
                   android:text="搜索"
                   android:textColor="@color/textColortwo"
                   android:gravity="center"
                   android:layout_height="match_parent"/>
    </RelativeLayout>
    <ImageView android:layout_width="1dp"
               android:layout_gravity="center"
               android:background="@color/gray01"
               android:layout_height="40dp"/>
    <RelativeLayout android:layout_width="0dp"
                    android:padding="6dp"
                    android:layout_weight="1"
                    android:id="@+id/foot_liner_two"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/foot_two"
                  android:textSize="18sp"
                  android:layout_centerHorizontal="true"
                  android:text="贵人"
                  android:textColor="@color/textColortwo"
                  android:gravity="center"
                  android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/em_unread_count_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="invisible" />
    </RelativeLayout>


    <ImageView android:layout_width="1dp"
               android:layout_gravity="center"
               android:background="@color/gray01"
               android:layout_height="40dp"/>
    <RelativeLayout android:layout_width="0dp"
                    android:padding="6dp"
                    android:layout_weight="1"
                    android:id="@+id/foot_liner_three"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/foot_three"
                  android:textSize="18sp"
                  android:layout_centerHorizontal="true"
                  android:text="喜讯"
                  android:textColor="@color/textColortwo"
                  android:gravity="center"
                  android:layout_height="match_parent"/>

    </RelativeLayout>
    <ImageView android:layout_width="1dp"
               android:layout_gravity="center"
               android:background="@color/gray01"
               android:layout_height="40dp"/>
    <RelativeLayout android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:layout_gravity="center"
                    android:id="@+id/foot_liner_four"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/foot_four"
                  android:textSize="18sp"
                  android:layout_centerHorizontal="true"
                  android:text="拓展"
                  android:textColor="@color/textColortwo"
                  android:gravity="center"
                  android:layout_height="match_parent"/>
    </RelativeLayout>
    <ImageView android:layout_width="1dp"
               android:layout_gravity="center"
               android:background="@color/gray01"
               android:layout_height="40dp"/>
    <RelativeLayout android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:layout_gravity="center"
                    android:id="@+id/foot_liner_five"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/foot_five"
                  android:textSize="18sp"
                  android:layout_centerHorizontal="true"
                  android:text="我的"
                  android:textColor="@color/textColortwo"
                  android:gravity="center"
                  android:layout_height="match_parent"/>

    </RelativeLayout>
</LinearLayout>