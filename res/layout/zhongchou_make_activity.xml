<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/top_liner"
            android:layout_height="@dimen/top_title_height"
            android:background="@color/mm_main_bg_mine_top"
            android:gravity="center_vertical"
            >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/back"
                android:paddingLeft="10dp"
                android:src="@drawable/md_return"
                android:paddingRight="10dp"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="贵人众筹"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/goods_detail_title"/>
    </RelativeLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:id="@+id/liner_two"
                          android:layout_marginTop="15dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="金额："
                          android:textColor="@color/textColor"
                          android:textSize="20sp"
                          android:layout_marginRight="15dp"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="200"
                          android:textSize="20sp"
                          android:id="@+id/order_count"
                          android:textColor="@color/red"
                          android:layout_marginLeft="25dp"
                          android:layout_marginRight="15dp"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="元"
                          android:textSize="20sp"
                          android:textColor="@color/textColor"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <com.Lbins.TvApp.widget.ReboundScrollView android:layout_width="match_parent"
                                                          android:layout_weight="1"
                                                          android:layout_height="wrap_content">
                <com.Lbins.TvApp.widget.MyTextView2
                        android:id="@+id/view"
                        android:padding="6dp"
                        android:lineSpacingMultiplier="1.5"
                        android:textColor="@color/black"
                        android:layout_marginTop="25dp"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
            </com.Lbins.TvApp.widget.ReboundScrollView>

            <Button android:layout_width="80dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/order_sure"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/relate"
                    android:background="@drawable/zhifu_btn"
                    android:layout_centerHorizontal="true"
                    android:layout_height="80dp"/>
        </LinearLayout>


</LinearLayout>