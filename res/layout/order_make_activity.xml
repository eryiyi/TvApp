<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/top_liner"
            android:layout_height="@dimen/top_title_height"
            android:background="@color/mm_main_bg_mine_top"
            android:gravity="center_vertical"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/back"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/md_return"
                android:text="返回"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="购买邀请码"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/goods_detail_title"/>
    </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_weight="1"
                      android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="25dp"
                          android:layout_marginTop="25dp"
                          android:id="@+id/liner_one"
                          android:gravity="center"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="wrap_content"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">
                    <EditText android:layout_width="wrap_content"
                              android:id="@+id/number"
                              android:background="@null"
                              android:text="1"
                              android:numeric="integer"
                              android:layout_gravity="center"
                              android:gravity="center"
                              android:textSize="35sp"
                              android:textColor="@color/textColor"
                              android:layout_height="wrap_content"/>
                    <ImageView android:layout_width="wrap_content"
                               android:scaleType="fitXY"
                               android:minWidth="50dp"
                               android:src="@drawable/line"
                               android:layout_height="wrap_content"/>
                </LinearLayout>

                <ImageView android:layout_width="wrap_content"
                           android:src="@drawable/chahao"
                           android:layout_marginLeft="15dp"
                           android:layout_marginRight="15dp"
                           android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:id="@+id/money"
                          android:textSize="35sp"
                          android:text="20"
                          android:textColor="@color/green_card"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="元"
                          android:textSize="35sp"
                          android:textColor="@color/green_card"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:id="@+id/liner_two"
                          android:layout_marginTop="15dp"
                          android:layout_below="@+id/liner_one"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="总计："
                          android:textColor="@color/textColor"
                          android:textSize="25sp"
                          android:layout_marginRight="15dp"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:textSize="25sp"
                          android:text="20"
                          android:id="@+id/order_count"
                          android:textColor="@color/red"
                          android:layout_marginLeft="25dp"
                          android:layout_marginRight="15dp"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="元"
                          android:textSize="25sp"
                          android:textColor="@color/textColor"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView android:layout_width="match_parent"
                      android:layout_below="@+id/liner_two"
                      android:gravity="center"
                      android:padding="8dp"
                      android:id="@+id/msg"
                      android:layout_marginTop="25dp"
                      android:layout_marginRight="25dp"
                      android:layout_marginLeft="25dp"
                      android:textColor="@color/textColortwo"
                      android:text="购买邀请码，邀请朋友注册。"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:gravity="center"
                  android:padding="15dp"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <!--<Button android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:onClick="goToPayAliy"-->
                <!--android:layout_marginRight="8dp"-->
                <!--android:background="@drawable/btn_pay_aliy_shape"-->
                <!--android:layout_height="wrap_content"/>-->

        <!--<Button android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:onClick="goToPayWeixin"-->
                <!--android:background="@drawable/btn_pay_weixin_shape"-->
                <!--android:layout_height="wrap_content"/>-->

        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:id="@+id/liner_wx"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="微信支付"
                      android:textColor="@color/text_color"
                      android:gravity="center_vertical"
                      android:drawableLeft="@drawable/ssdk_oks_classic_wechat"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:id="@+id/liner_zfb"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="支付宝支付"
                      android:textColor="@color/text_color"
                      android:gravity="center_vertical"
                      android:drawableLeft="@drawable/ssdk_oks_classic_alipay"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>