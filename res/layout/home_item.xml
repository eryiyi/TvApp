<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@drawable/zhuye_item_select"
                android:layout_height="wrap_content">

    <ImageView
            android:layout_width="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:id="@+id/home_viewed_item_cover"
            android:layout_height="50dp"/>

    <TextView
            android:id="@+id/home_viewed_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/home_viewed_item_cover"
            />
    <TextView
            android:id="@+id/item_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/home_viewed_item_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/home_viewed_item_cover"
            />


    <TextView
            android:id="@+id/home_item_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/home_viewed_item_name"
            android:textSize="13sp"
            android:textColor="@color/textColortwo"
            android:text=""
            />

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/liner_layout"
                  android:layout_below="@+id/home_viewed_item_cover"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/home_viewed_item_cont"
                  android:textSize="15dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="8dp"
                  android:layout_marginTop="8dp"
                  android:paddingTop="6dp"
                  android:paddingRight="12dp"
                  android:ellipsize="end"
                  android:singleLine="false"
                  android:lineSpacingExtra="3dp"
                  android:textColor="@color/textColor"/>
        <ImageView
                android:id="@+id/home_photo_item_photo"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/no_data"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:layout_centerHorizontal="true"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:id="@+id/img_relate"
                        android:paddingTop="12dp"
                        android:descendantFocusability="blocksDescendants"
                        android:layout_below="@+id/home_viewed_item_cont"
                        android:layout_height="wrap_content">

            <com.Lbins.TvApp.widget.PictureGridview
                    android:id="@+id/gridview_detail_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:gravity="center"
                    android:horizontalSpacing="4dip"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="4dip"
                    android:padding="4dip"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:paddingTop="12dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/home_photo_item_photo_video"
                        android:layout_width="match_parent"
                        android:src="@drawable/no_data"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"/>
                <ImageView
                        android:id="@+id/home_player_icon_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_home_play"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_marginTop="8dp"
          android:layout_below="@+id/liner_layout"
          android:id="@+id/line_bottom"
          android:layout_height="1px"></View>
    <TextView
            android:id="@+id/home_viewed_item_time"
            android:layout_width="75dp"
            android:layout_marginLeft="8dp"
            android:drawablePadding="6dp"
            android:gravity="center|left"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textColortwo"
            android:layout_below="@+id/line_bottom"
            />
    <TextView
            android:id="@+id/home_viewed_item_type"
            android:layout_width="75dp"
            android:text="自媒体"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/home_viewed_item_time"
            android:drawablePadding="6dp"
            android:layout_marginRight="15dp"
            android:gravity="center|left"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:layout_below="@+id/line_bottom"
            />

    <TextView
            android:id="@+id/home_photo_item_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line_bottom"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/sm_fav"
            android:textColor="@color/textColortwo"
            android:singleLine="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="8dp"
            android:textSize="14sp"
            android:ellipsize="end"
            android:gravity="center|left"/>

    <TextView
            android:id="@+id/home_photo_item_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_bottom"
            android:layout_toLeftOf="@+id/home_photo_item_like_count"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/sm_content"
            android:textColor="@color/textColortwo"
            android:singleLine="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:padding="5dp"
            android:textSize="14sp"
            android:ellipsize="end"
            android:gravity="center|left"/>

    <TextView
            android:id="@+id/home_photo_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_bottom"
            android:layout_toLeftOf="@+id/home_photo_item_comment_count"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/icon_little_h_gray_trash"
            android:textColor="@color/textColortwo"
            android:singleLine="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:padding="5dp"
            android:textSize="14sp"
            android:ellipsize="end"
            android:gravity="center|left"/>
</RelativeLayout>