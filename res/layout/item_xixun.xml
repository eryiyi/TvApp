<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/zhuye_item_select"
                android:layout_height="wrap_content">

    <ImageView
            android:layout_width="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/home_viewed_item_cover"
            android:layout_height="55dp"/>

    <TextView
            android:id="@+id/home_viewed_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/home_viewed_item_cover"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="7"
            />


    <TextView
            android:id="@+id/home_viewed_item_time"
            android:layout_width="wrap_content"
            android:text="认识他"
            android:padding="6dp"
            android:background="@color/mm_top_bg"
            android:layout_marginRight="3dp"
            android:gravity="center|right"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"/>

    <TextView
            android:id="@+id/home_item_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/home_viewed_item_cover"
            android:textSize="13sp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/home_viewed_item_name"
            android:textColor="@color/textColortwo"
            android:drawablePadding="8dip"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/home_viewed_item_cont"
              android:textSize="15dp"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
              android:paddingLeft="12dp"
              android:paddingRight="12dp"
              android:layout_below="@+id/home_viewed_item_cover"
              android:ellipsize="end"
              android:singleLine="false"
              android:maxLines="3"
              android:lineSpacingExtra="3dp"
              android:textColor="@color/textColor"/>


</RelativeLayout>