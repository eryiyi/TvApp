<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="65dp">
    <RelativeLayout android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:id="@+id/foot_liner_one"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                   android:id="@+id/foot_one"
                   android:textSize="18sp"
                   android:layout_centerHorizontal="true"
                   android:text="找服务"
                   android:textColor="@color/textColortwo"
                   android:gravity="center"
                   android:layout_height="match_parent"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:id="@+id/foot_add_liner"
                    android:layout_height="65dp">
        <ImageView android:layout_width="35dp"
                   android:layout_centerInParent="true"
                   android:id="@+id/add_btn"
                   android:src="@drawable/icon_add_help"
                   android:layout_height="35dp"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="0dp"
                    android:padding="6dp"
                    android:layout_weight="1"
                    android:id="@+id/foot_liner_three"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/foot_three"
                  android:textSize="18sp"
                  android:layout_centerHorizontal="true"
                  android:text="去帮忙"
                  android:textColor="@color/textColortwo"
                  android:gravity="center"
                  android:layout_height="match_parent"/>

    </RelativeLayout>

</LinearLayout>